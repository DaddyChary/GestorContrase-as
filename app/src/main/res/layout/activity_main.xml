<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- RecyclerView para mostrar las contraseñas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/password_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FloatingActionButton para agregar nuevas contraseñas -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_password_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Agregar contraseña"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- FloatingActionButton para recargar las tarjetas -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/refresh_password_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Recargar contraseñas"
        android:src="@drawable/ic_refresh"
        app:layout_constraintBottom_toTopOf="@id/add_password_fab"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- FloatingActionButton para cerrar sesión en la parte inferior izquierda -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Cerrar sesión"
        android:src="@drawable/ic_logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
